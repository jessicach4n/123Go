<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ListeDefisActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:padding="50dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_logo" />

        <LinearLayout
            android:id="@+id/btnDefi1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/defis_background_afaire"
            android:orientation="vertical">

            <TextView
                android:id="@+id/defi1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/kavoon"
                android:gravity="bottom|center_horizontal"
                android:lineSpacingExtra="12sp"
                android:text="Défi 1"
                android:textColor="@color/red"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/status_defi1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/kavoon"
                android:gravity="center_horizontal"
                android:text="À faire"
                android:textColor="@color/lightred"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnDefi2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="2"
            android:background="@drawable/defis_background_complete"
            android:orientation="vertical">

            <TextView
                android:id="@+id/defi2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/kavoon"
                android:gravity="bottom|center"
                android:lineSpacingExtra="12sp"
                android:text="Défi 2"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/status_defi2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/kavoon"
                android:gravity="center_horizontal"
                android:text="À faire"
                android:textColor="@color/lightred"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:transitionName="menu">

        <Button
            android:id="@+id/defis"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_main_layout"
            android:fontFamily="@font/sniglet"
            android:text="Défis"
            android:textColor="@color/lightyellow"
            app:icon="@drawable/ic_trophy_solid"
            app:iconGravity="textTop"
            app:iconPadding="10dp"
            app:iconTint="@color/lightyellow" />

        <Button
            android:id="@+id/about"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_main_layout"
            android:fontFamily="@font/sniglet"
            android:text="À Propos"
            app:icon="@drawable/ic_readme_brands"
            app:iconGravity="textTop"
            app:iconPadding="10dp" />

        <Button
            android:id="@+id/facebook"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_main_layout"
            android:fontFamily="@font/sniglet"
            android:text="Facebook"
            app:icon="@drawable/ic_facebook_square_brands"
            app:iconGravity="textTop"
            app:iconPadding="10dp" />
    </LinearLayout>
</LinearLayout>